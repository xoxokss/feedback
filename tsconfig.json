{
	"compilerOptions": {
		"target": "es5",
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"module": "commonjs",
		"outDir": "./dist",
		"rootDir": "src",
		"baseUrl": ".",
		"paths": {
			"~/*": ["src/*"],
			"@config": ["src/config/*"],
			"@controller": ["src/controller/*"],
			"@models": ["src/models/*"],
			"@routes": ["src/routes/*"],
			"@utils": ["src/utils/*"],
			"@helper": ["src/utils/helper/*"],
			"@middleware": ["src/utils/middleware/*"]
		}
	},
	"ts-node": {
		"esm": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
